@model WebApplication5.Models.Question

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-titlE">Reply</h4>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("Reply", "Posts", FormMethod.Post))
                {
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.QuestionNumber)
                                    <div>
                                        <dl class="dl-horizontal">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Question1)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Question1)
                                            </dd>
                                        </dl>
                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Reply, htmlAttributes: new { @class = "control-label col-md-2" })
