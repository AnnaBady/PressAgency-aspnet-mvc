@model IEnumerable<WebApplication5.Models.Editor>

@{
    ViewBag.Title = "Editors";
    Layout = "~/Views/Admin/_AdminNav.cshtml";
}

<h2>Editors</h2>

<p>
    @Html.ActionLink("Create New", "AddEditor")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            <img src="@Url.Content(item.Photo)" width="100" height="100" />
        </td>
        
        <td>
     
            @Html.ActionLink("Details", "EditorDetails", new { id=item.id }) |
            @Html.ActionLink("Delete", "DeleteEditor", new { id=item.id })
        </td>
    </tr>
}

</table>
